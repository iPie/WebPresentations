<div class="pagination">
    <ul>
        @if (Model.HasPreviousPage)
        {
            <li class="prev"><a href="@Url.Action(ViewBag.RedirectRoute, new { page = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">
                &larr; @ViewRes.SharedLayoutStrings.Previous</a></li>
        }
        else
        {
            <li class="disabled"><a>&larr; @ViewRes.SharedLayoutStrings.Previous</a></li>
        }
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (Model.PageNumber == i)
            {
                <li class="active"><a>@i</a></li>
            }
            else
            {
                <li>@Html.ActionLink(i.ToString(), "Index", new { page = i, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })</li>
            }

        }
        @if (Model.HasNextPage)
        {
            <li class="next"><a href="@Url.Action(ViewBag.RedirectRoute, new { page = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">
                @ViewRes.SharedLayoutStrings.Next &rarr;</a></li>
        }
        else
        {
            <li class="disabled"><a>@ViewRes.SharedLayoutStrings.Next &rarr;</a></li>
        }
    </ul>
</div>